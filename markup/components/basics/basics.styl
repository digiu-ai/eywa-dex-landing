.basics
  max-width 1088px
  display flex
  flex-direction column
  align-items center
  margin 0 auto
  &__title
    font-weight bold
    font-size 56px
    line-height 64px
    margin-bottom 56px
    & > span
      color #3BC199
  &__subtitle
    font-weight 500
    font-size 24px
    line-height 34px
    margin-bottom 48px
    text-align center
  &__list
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 32px
  &__item
    padding 40px
    background #fff
    border-radius 4px
    width 416px
    max-width 416px
    min-height 250px
    & > img
      margin-bottom 24px
    &-text
      font-weight 600
      font-size 24px
      line-height 34px
      color #373D47
