.footer
  padding 56px 80px
  background #1B1A2F
  width calc(100% - 160px)
  position fixed
  bottom 0
  display flex
  justify-content space-between
  &__logo
    max-width 170px
    > img
      margin-bottom 8px
    &-main-text
      font-family Rubik
      font-style normal
      font-weight normal
      font-size 16px
      line-height 24px
      color #FFFFFF
      margin-bottom 8px
    &-sub-text
      font-family Rubik
      font-style normal
      font-weight normal
      font-size 14px
      line-height 32px
      color #818EA7
      margin-bottom 8px
  &__links
    display grid
    grid-auto-flow column
    grid-template-columns repeat(3, 1fr)
    grid-template-rows repeat(4, 1fr)
    grid-gap 16px 130px
  
