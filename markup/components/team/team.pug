include ../anchor/anchor.pug
mixin team(data)
    .team
        +anchor('team')
        .team__title Team
        .team__list
            each val in team.teamList
                .team__item
                    .team__item-img
                        img(src=val.img)
                    .team__item-title #{val.title}
                    .team__item-subtitle #{val.subtitle}
                    if val.linkedinLink
                        a(href=val.linkedinLink target='_blank').team__link Linkedin