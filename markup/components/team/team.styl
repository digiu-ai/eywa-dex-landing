 .team
   margin-bottom 160px
   display flex
   flex-direction column
   align-items center
   &__title
    font-weight bold
    font-size 56px
    line-height 62px
    margin-bottom 104px
   &__list
    width 100%
    max-width: 1505px
    margin 0 auto
    display grid
    grid-gap 56px 100px
    grid-template-columns repeat(auto-fill, 216px)
   &__item
     display flex
     align-items center
     justify-content space-around
     flex-direction column
     &-title
      font-weight 500
      font-size 24px
      line-height 32px
     &-subtitle
      font-weight normal
      font-size 16px
      line-height 24px
     &-img
      width: 216px
   &__link
    font-weight normal
    font-size 16px
    line-height 24px
    color #3BC199
  
  
