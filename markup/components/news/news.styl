.news
  display flex
  flex-direction column
  align-items center
  margin-bottom 100px
  &__title
    font-weight bold
    font-size 56px
    line-height 62px
    letter-spacing 1px
    margin-bottom 80px
  &__content
    display flex
  &__item
    background-color #fff
    border-radius 4px
    margin-right 32px
    max-width 416px
    &:last-child
      margin-right 0
    &-img
      width 416px
    &-content
      padding 24px
      &-date
        font-size 16px
        line-height 16px
        color #818EA7
        letter-spacing 0.1px
        margin-bottom 16px
      &-text
        font-weight 500
        font-size 24px
        line-height 34px
        color #373D47
        margin-bottom 16px
      &-more
        font-weight 500
        font-size 16px
        line-height 30px
        color #3BC199
        cursor pointer