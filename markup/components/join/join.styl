.join
  display flex
  align-items center
  flex-direction column
  margin-bottom 100px
  &__title
    font-weight bold
    font-size 56px
    line-height 62px
    margin-bottom 80px
  &__content
    display flex
  &__section.section
    margin-right 32px
    max-width 640px
    &._with-logo
      background-image url('%=static=%general/just-logo.svg')
      background-repeat no-repeat
      background-position: bottom 42px right 44px
    &:last-child
      margin-right 0
  &__button
    min-width 240px

.section
  background #FFFFFF
  border-radius 8px
  padding 40px
  &__title
    font-weight 500
    font-size 24px
    line-height 34px
    margin-bottom 24px
    color #373D47
  &__text
    font-weight normal
    font-size 16px
    line-height 24px
    color #373D47
    margin-bottom 24px

@media screen and (max-width: $desktop1)
  .join
    &__title
      font-size 40px
      line-height 62px
    &__section.section
      max-width 540px
      &._with-logo
        background-size 65px 72px
  .section
    padding 40px 32px
    &__title
      font-size 20px
      line-height 30px
    &__text
      font-size 14px
      line-height 24px